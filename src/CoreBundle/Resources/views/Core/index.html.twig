{% extends 'CoreBundle::layout.html.twig' %}

{% block core_title %}Liste de mes animaux{% endblock %}

{% block core_body %}
    {% if animals is not empty %}

        {{ include('CoreBundle:Core:addButton.html.twig') }}

        <table class="table table-bordered">
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Action</th>
            </tr>

            {% for animal in animals %}
                <tr {{ addAnimalColor(animal) }}>
                    <td>{{ animal.name }}</td>
                    <td>{{ animal }}</td>
                    <td>
                        <a href="{{ path('core_edit', {'id': animal.id}) }}" style="color: #333;"><span class="glyphicon glyphicon-edit"></span></a>
                        &nbsp;
                        <a href="{{ path('core_delete', {'id': animal.id, 'csrf_token': csrf_token(secret)}) }}" style="color: #333;"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
            <p>Il n'y a rien Ã  afficher !</p>
    {% endif %}

    {{ include('CoreBundle:Core:addButton.html.twig') }}

{% endblock %}
